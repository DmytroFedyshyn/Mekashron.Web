<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mekashron.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Mekashron.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-toggleable navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <div class="navbar-collapse  d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item d-flex">
                            <a class="navbar-brand mb-0 mx-3 h1" asp-area="" asp-page="/Index">LOGO</a>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Menu1</a>
                            <div class="my-auto" style="border-left:1px solid;height:14px"></div>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Menu2</a>
                            <div class="my-auto" style="border-left:1px solid;height:14px"></div>
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Menu3</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Mekashron.Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

@*  <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)*@
</body>
</html>